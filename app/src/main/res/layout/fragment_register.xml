<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chaunhatlong.footballonline.RegisterFragment"
    android:background="#FBFBFB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ SÂN"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="#EC2049"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rg_user"
            android:layout_marginLeft="20px"
            android:layout_marginTop="60dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/user"
            android:layout_marginLeft="80px"
            android:layout_marginTop="50dp"
            android:textColor="#F26B38"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rg_location"
            android:layout_marginLeft="20px"
            android:layout_marginTop="60dp"/>
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sân"
            android:id="@+id/fields"
            android:layout_marginLeft="80px"
            android:layout_marginTop="50dp"
            android:spinnerMode="dropdown"
            android:textColor="#F26B38" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_times"
                android:layout_marginLeft="20px"
                android:layout_marginTop="53dp"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:hint="Giờ bắt đầu"
                android:id="@+id/time_start"
                android:layout_marginLeft="150px"
                android:layout_marginRight="100px"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:textColor="#F26B38" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_time_start"
                android:text="Đặt giờ"
                android:layout_marginTop="45dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timeend"
            android:layout_marginLeft="20px"
            android:layout_marginTop="53dp"/>
        <TextView
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:hint="Giờ kết thúc"
            android:id="@+id/time_end"
            android:layout_marginLeft="145px"
            android:layout_marginRight="100px"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#F26B38" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_time_end"
            android:text="Đặt giờ"
            android:layout_marginTop="45dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_day"
            android:layout_marginLeft="20px"
            android:layout_marginTop="53dp"/>
        <TextView
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:hint="Đặt ngày đá"
            android:id="@+id/day_match"
            android:layout_marginLeft="150px"
            android:layout_marginRight="100px"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#F26B38" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_day"
            android:text="Đặt ngày"
            android:layout_marginTop="45dp"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ"
        android:id="@+id/btn_register"
        android:layout_marginTop="350dp"
        android:textColor="#F26B38"
        android:onClick=""/>

</RelativeLayout>

